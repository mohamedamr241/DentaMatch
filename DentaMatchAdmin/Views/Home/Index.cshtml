@model HomePageVM
@{
    ViewData["Title"] = "Users";
}
<partial name="_Notifications" />
<!--start breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Dashboard</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="javascript:;">
                        <ion-icon name="home-outline"></ion-icon>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    eCommerce
                </li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<!--start row-->
<div class="row row-cols-1 row-cols-lg-2 row-cols-xxl-4">
    <div class="col">
        <div class="card radius-10">
            <div class="card-body">
                <div class="d-flex align-items-start gap-2">
                    <div>
                        <p class="mb-0 fs-6">Total Doctors</p>
                    </div>
                    <div class="ms-auto widget-icon-small text-white bg-gradient-info">
                        <ion-icon name="people-outline"></ion-icon>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-3">
                    <div>
                        <h4 class="mb-0">@Model.TotalDoctors</h4>
                    </div>
                    <div class="ms-auto">+@Model.DoctorGrossPercentPerWeek %</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card radius-10">
            <div class="card-body">
                <div class="d-flex align-items-start gap-2">
                    <div>
                        <p class="mb-0 fs-6">Total Patients</p>
                    </div>
                    <div class="ms-auto widget-icon-small text-white bg-gradient-info">
                        <ion-icon name="people-outline"></ion-icon>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-3">
                    <div>
                        <h4 class="mb-0" >@Model.TotalPatients</h4>
                    </div>
                    <div class="ms-auto">+@Model.PatientGrossPercentPerWeek %</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card radius-10">
            <div class="card-body">
                <div class="d-flex align-items-start gap-2">
                    <div>
                        <p class="mb-0 fs-6">Total Treatments</p>
                    </div>
                    <div class="ms-auto widget-icon-small text-white bg-gradient-danger">
                        <ion-icon name="bag-handle-outline"></ion-icon>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-3">
                    <div>
                        <h4 class="mb-0" >@Model.TotalTreatments</h4>
                    </div>
                    <div class="ms-auto">+@Model.TreatmentsPercentPerWeek %</div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--end row-->

<div class="row">
    <div class="col-12 col-lg-12 col-xl-8 d-flex">
        <div class="card radius-10 w-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <h6 class="mb-0">Users per Week</h6>
                    <!--<div class="dropdown options ms-auto">
                        <div class="dropdown-toggle dropdown-toggle-nocaret"
                             data-bs-toggle="dropdown">
                            <ion-icon name="ellipsis-horizontal-outline"></ion-icon>
                        </div>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="javascript:;">Action</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="javascript:;">Another action</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="javascript:;">Something else here</a>
                            </li>
                        </ul>
                    </div>-->
                </div>
                <div class="row row-cols-1 row-cols-md-2 g-3 align-items-center">
                    <div class="col-lg-7 col-xl-7 col-xxl-7 order-2">
                        <div id="chart6"></div>
                    </div>
                    <div class="col-lg-5 col-xl-5 col-xxl-5">
                        <div class="">
                            <div class="mb-4">
                                <h2 class="mb-0">@Model.TotalUserPerWeek</h2>
                                <p class="mb-0">Total Users</p>
                            </div>
                            <div class="d-flex align-items-start gap-3 mb-3">
                                <div class="widget-icon-small rounded bg-light-purple text-purple">
                                    <ion-icon name="gift-outline"></ion-icon>
                                </div>
                                <div>
                                    <p class="mb-1">Current Users</p>
                                    <p class="mb-0 h5">@Model.CurrentUserPerWeek</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start gap-3 mb-3">
                                <div class="widget-icon-small rounded bg-light-info text-info">
                                    <ion-icon name="briefcase-outline"></ion-icon>
                                </div>
                                <div>
                                    <p class="mb-1">New Users</p>
                                    <p class="mb-0 h5">@Model.NewUserPerWeek</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-4 d-flex">
        <div class="card radius-10 overflow-hidden w-100">
            <div class="card-body">
                <div class="d-flex flex-column gap-3">
                    <div class="card border shadow-none radius-10 flex-grow-1 mb-0">
                        <div class="card-body">
                            <div class="d-flex align-items-start gap-2">
                                <div>
                                    <h5 class="mb-0">Total Accounts</h5>
                                </div>
                                <div class="ms-auto widget-icon-2 text-white bg-info rounded-circle">
                                    <ion-icon name="people-outline"></ion-icon>
                                </div>
                            </div>
                            <div class="">
                                <h3 class="mb-2">@Model.TotalAccounts</h3>
                                <div class="d-flex align-items-center gap-2">
                                    @if (@Model.AccountsGrossLastYear > 0)
                                    {
                                        <div class="widget-icon-small bg-light-success text-success">
                                            <ion-icon name="arrow-up-outline"></ion-icon>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="widget-icon-small bg-light-danger text-danger">
                                            <ion-icon name="arrow-down-outline"></ion-icon>
                                        </div>   
                                    }
                                    <p class="mb-0">@Model.AccountsGrossLastYear% this year</p>
                                </div>
                            </div>
                            <div id="chart3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

<!--end row-->
<script>
    var myData = @Model.WeeklyStatusOfUsers;
    var monthes = [@Model.January, @Model.February, @Model.March, @Model.April, @Model.May, @Model.June, @Model.July, @Model.August, @Model.September, @Model.October, @Model.November, @Model.December]
</script>

