@model List<DoctorResponseVM>
@{
    ViewData["Title"] = "Users";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Dashboard</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="javascript:;">
                        <ion-icon name="person-circle-outline"></ion-icon>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Doctors
                </li>
            </ol>
        </nav>
    </div>
</div>

<div class="card radius-10 w-100">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Recent Doctors</h6>
        </div>
        <div class="table-responsive mt-2">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Doctors</th>
                        <th>ID Card</th>
                        <th>University</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                        
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    @if(obj.ProfileImageLink == null)
                                    {
                                        @if(@obj.Gender == false)
                                        {
                                            <div class="product-box border">
                                                <img src="~/assets/images/MaleDoc.png"
                                                     alt="ProfileImg" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="product-box border">
                                                <img src="~/assets/images/femaleDoc.png"
                                                     alt="ProfileImg" />
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="product-box border">
                                            <img src="@obj.ProfileImageLink"
                                                 alt="ProfileImg" />
                                        </div>  
                                    }
                                    <div class="product-info">
                                        <h6 class="product-name mb-1">@obj.FullName</h6>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="product-box border">
                                        <img src="@obj.CardImageLink"
                                             alt=""
                                             class="enlarge-image" />
                                    </div>
                                </div>
                            </td>
                            <td>@obj.University</td>
                            <td><span class="badge bg-warning">pending</span></td>
                            <td>
                                <div class="d-flex align-items-center gap-3 fs-6">
                                    <a href="javascript:;"
                                       class="text-primary"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="bottom"
                                       title=""
                                       data-bs-original-title="View detail"
                                       aria-label="Views">
                                        <ion-icon name="eye-outline"></ion-icon>
                                    </a>

                                    <a value="@obj.doctorId" id="VerifyUser"
                                           class="text-primary"
                                           data-bs-toggle="tooltip"
                                           data-bs-placement="bottom"
                                           title=""
                                           data-bs-original-title="View detail"
                                           aria-label="Views">
                                            <ion-icon name="checkmark-outline"></ion-icon>
                                    </a>

                                    <a value="@obj.doctorId" id="RejectUser"
                                           class="text-danger"
                                           data-bs-toggle="tooltip"
                                           data-bs-placement="bottom"
                                           title=""
                                           data-bs-original-title="Delete"
                                           aria-label="Delete">
                                            <ion-icon name="close-outline"></ion-icon>
                                     </a>

                                </div>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/assets/js/VerifyingDoctor.js"></script>